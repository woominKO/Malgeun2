<h2>공지사항</h2>
<div class="table-container">
<table>
    <thead>
        <tr>
            <th>No.</th>
            <th>Title</th>
        </tr>
    </thead>
    <tbody id="postTableBody">
        <% quotes.forEach(function(quote, index) { %>
            <tr style="height: 40px;">
                <td><%= index + 1 %></td>
                <td><a href="/writing/<%= quote._id %>"><%= quote.title %></a></td>
            </tr>
        <% }); %>
    </tbody>
</table>
</div>
<a href="write.html" class="write-button">글 쓰기</a>
